<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DexcomWindows.Controls.GlucoseChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ChartContainer">
        <!-- Canvas for drawing the chart -->
        <Canvas x:Name="ChartCanvas" 
                SizeChanged="ChartCanvas_SizeChanged"
                PointerMoved="ChartCanvas_PointerMoved"
                PointerExited="ChartCanvas_PointerExited"
                Background="Transparent"/>

        <!-- Tooltip overlay - high contrast for visibility -->
        <Border x:Name="TooltipBorder"
                Visibility="Collapsed"
                Background="#F0202020"
                BorderBrush="#60FFFFFF"
                BorderThickness="1"
                CornerRadius="8"
                Padding="12,8"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsHitTestVisible="False">
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="6">
                    <TextBlock x:Name="TooltipValue" FontSize="18" FontWeight="Bold" Foreground="White"/>
                    <TextBlock x:Name="TooltipTrend" FontSize="18" FontWeight="Bold"/>
                </StackPanel>
                <TextBlock x:Name="TooltipTime" FontSize="13" Foreground="#CCCCCC" Margin="0,2,0,0"/>
            </StackPanel>
        </Border>

        <!-- Empty state -->
        <StackPanel x:Name="EmptyState" 
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="8">
            <FontIcon Glyph="&#xE9D9;" FontSize="32" 
                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="No data for this time range"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</UserControl>
