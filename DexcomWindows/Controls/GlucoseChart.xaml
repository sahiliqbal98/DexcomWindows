<?xml version="1.0" encoding="utf-8"?>
<UserControl
    x:Class="DexcomWindows.Controls.GlucoseChart"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid x:Name="ChartContainer">
        <!-- Canvas for drawing the chart -->
        <Canvas x:Name="ChartCanvas" 
                SizeChanged="ChartCanvas_SizeChanged"
                PointerMoved="ChartCanvas_PointerMoved"
                PointerExited="ChartCanvas_PointerExited"
                Background="Transparent"/>

        <!-- Tooltip overlay -->
        <Border x:Name="TooltipBorder"
                Visibility="Collapsed"
                Background="{ThemeResource CardBackgroundFillColorDefaultBrush}"
                BorderBrush="{ThemeResource CardStrokeColorDefaultBrush}"
                BorderThickness="1"
                CornerRadius="6"
                Padding="8,6"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                IsHitTestVisible="False">
            <Border.Shadow>
                <ThemeShadow/>
            </Border.Shadow>
            <StackPanel>
                <StackPanel Orientation="Horizontal" Spacing="4">
                    <TextBlock x:Name="TooltipValue" FontSize="14" FontWeight="SemiBold"/>
                    <TextBlock x:Name="TooltipTrend" FontSize="14"/>
                </StackPanel>
                <TextBlock x:Name="TooltipTime" FontSize="11" 
                           Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
            </StackPanel>
        </Border>

        <!-- Empty state -->
        <StackPanel x:Name="EmptyState" 
                    Visibility="Collapsed"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Spacing="8">
            <FontIcon Glyph="&#xE9D9;" FontSize="32" 
                      Foreground="{ThemeResource TextFillColorTertiaryBrush}"/>
            <TextBlock Text="No data for this time range"
                       FontSize="12"
                       Foreground="{ThemeResource TextFillColorSecondaryBrush}"/>
        </StackPanel>
    </Grid>
</UserControl>
